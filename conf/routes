# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#Populate Database

GET         /populateDatabase                    controllers.DatabasePopulator.populateTherapistDatabase()

# Home page
GET         /                                     controllers.Application.login()
POST        /login                                controllers.Application.authenticate()
GET         /logout                               controllers.Application.logout()
GET         /index                                controllers.Application.index()

#Sign Up
POST        /signup                               controllers.Application.signUpPartial()
POST        /registerAdmin                        controllers.Application.registerAdmin()
GET         /signUp                               controllers.Application.signUp()


# Profile
GET         /profile                              controllers.Application.profile()


# List Pacient
GET         /patients                             controllers.PatientController.patientList()

# Add Patient
GET         /patients/new                         controllers.PatientController.createPatient()
POST        /patients                             controllers.PatientController.savePatient()

# Remove Patient
POST        /patients/id/removePatient            controllers.PatientController.removePatient(id: Integer)


# List Therapist
GET         /therapists                           controllers.TherapistController.therapistList()

# Add Therapist
GET         /therapists/new                       controllers.TherapistController.createTherapist()
POST        /therapists                           controllers.TherapistController.saveTherapist()

# Remove Therapist
POST        /therapists/id/removeTherapist        controllers.TherapistController.removeTherapist(id: Integer)

# Edit existing Therapist
GET         /therapists/:id                       controllers.TherapistController.editTherapist(id:Integer)
POST        /therapists/:id                       controllers.TherapistController.updateTherapist(id:Integer)



# List Team
GET         /teams                                controllers.TeamController.teamList()

# Add Team
GET         /teams/new                            controllers.TeamController.createTeam()
POST        /teams                                controllers.TeamController.saveTeam()




# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                         controllers.Assets.at(path="/public", file)
