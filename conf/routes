# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                       controllers.Application.login()
GET     /home                   controllers.Application.index()

# List Therapist
GET     /therapists              controllers.Application.therapistList()


# List Pacient
GET     /pacients              controllers.Application.pacientList()


# Profile
GET     /profile              controllers.Application.profile()



# Add Therapist
GET     /therapists/new              controllers.Application.createTherapist()
POST    /therapists                  controllers.Application.saveTherapist()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
