# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               controllers.Application.login()
GET     /login                          controllers.Application.login()
POST    /login                          controllers.Application.authenticate()
GET     /logout                          controllers.Application.logout()
GET     /index                          controllers.Application.index()

# List Therapist
GET     /therapists                     controllers.TherapistController.therapistList()


# List Pacient
GET     /pacients                       controllers.Application.patientList()


# Profile
GET     /profile                        controllers.Application.profile()



# Add Patient
GET     /patients/new                   controllers.Application.createPatient()
POST    /patients                       controllers.Application.savePatient()

# Remove Patient
POST    /patients/id/removePatient      controllers.Application.removePatient(id: Integer)

# Add Therapist
GET     /therapists/new                 controllers.TherapistController.createTherapist()
POST    /therapists                     controllers.TherapistController.saveTherapist()

# Remove Therapist
POST    /therapists/id/removeTherapist  controllers.TherapistController.removeTherapist(id: Integer)


# Edit existing Therapist
GET     /therapists/:id              controllers.TherapistController.editTherapist(id:Integer)
POST    /therapists/:id              controllers.TherapistController.updateTherapist(id:Integer)



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.at(path="/public", file)
